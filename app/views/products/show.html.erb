<div class = "container-fluid">
    <div class = "container">
        <div class="row">
        <%# item photo should be manipulated later %>
			<div class="col-md-5">
            <%# fix the max-width problem %>
                <div style="max-width: 600px;">
                    <%= image_tag @product.image_url_2, :class => "img-fluid d-inline-block pt-2 mt-4 pr-2 pb-2" %>
                    <%= image_tag @product.image_url_1, :class => "img-fluid d-inline-block pr-2 mt-2 pb-2" %>
                    <%= image_tag @product.image_url_3, :class => "img-fluid d-inline-block pr-2 mt-2 pb-2" %>
                </div>
            </div>

            <div class="col-md-7" style="border:0px solid white">
                <div class="card-body text-dark" style="max-width: 40rem;">
					<div class="card-header bg-transparent">
						<h4 class="d-inline"><%= @product.name %></h4>
                        <h4 class="d-inline float-right"><%= number_to_currency(@product.price, delimiter: ", ") %></h4>
					</div>
                    
                    <div class="card-body bg-transparent mb-0">
						<p class="card-text"><%= @product.description %></p>	
					</div>    
                
					<div class="card-body bg-transparent mt-0 pt-0">
                        <div>
                            <p class="card-text d-inline">Fabric Brand:</p>
                            <p class="card-text d-inline float-right"><%= @product.brand %></p>
					    </div>

                        <div>
                            <p class="card-text d-inline" style="">Fabric Type:</p>
                            <p class="card-text d-inline float-right"><%= @product.fabric_type %></p>
					    </div>

                        <div>
                            <p class="card-text d-inline">Fabric Transparency:</p>
                            <p class="card-text d-inline float-right"><%= @product.transparency %></p>
					    </div>

                        <div>
                            <p class="card-text d-inline">Product Color:</p>
                            <p class="card-text d-inline float-right"><%= @product.color %></p>
					    </div>
                    </div>

                    <div>
                    <%# CREATE 2 ROUTES %>
                        <%# <button type="button" class="btn btn-primary d-inline"><%= link_to 'Get Fabric Sample', root_path, :style => 'color:#FFFFFF' %>
                        <%# <button type="button" class="btn btn-primary d-inline"><%= link_to 'Customise Shirt', root_path, :style => 'color:#FFFFFF' %>

                    </div>                
                    <hr>
                    <%= render 'products/style', product: @product, user: @user %>
                    
                </div>
                
            

        </div>
    </div>  
</div>







